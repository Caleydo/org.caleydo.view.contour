<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.caleydo.view.contour.item" name="ItemFactory" schema="schema/org.caleydo.view.contour.item.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.caleydo.core.views"
            class="org.caleydo.view.relationshipexplorer.internal.RcpGLRelationshipExplorerView"
            icon="resources/icons/icon.png"
            id="org.caleydo.view.relationshipexplorer"
            name="ConTour">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.caleydo.menu.view.visualization">
         <command
               commandId="org.caleydo.view.relationshipexplorer.command.open"
               icon="resources/icons/icon.png"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.relationshipexplorer.internal.OpenViewHandler"
            id="org.caleydo.view.relationshipexplorer.command.open"
            name="ConTour">
      </command>
   </extension>
   <extension
         point="org.caleydo.core.data.datadomain.ViewDataDomainAssociation">
      <association
            view="org.caleydo.view.relationshipexplorer">
         <dataDomain
               type="org.caleydo.datadomain.genetic">
         </dataDomain>
         <dataDomain
               type="org.caleydo.datadomain.generic">
         </dataDomain>
      </association>
   </extension>
   <extension
         point="org.caleydo.view.contour.item">
      <itemfactory
            class="org.caleydo.view.relationshipexplorer.ui.column.item.factory.impl.HCSActivityConfigurationAddon">
      </itemfactory>
      <itemfactory
            class="org.caleydo.view.relationshipexplorer.ui.column.item.factory.impl.HTIImageAreaConfigurationAddon">
      </itemfactory>
      <itemfactory
            class="org.caleydo.view.relationshipexplorer.ui.column.item.factory.impl.HTIMutationItemConfigurationAddon">
      </itemfactory>
      <itemfactory
            class="org.caleydo.view.relationshipexplorer.ui.column.item.factory.impl.HTIVariantCallConfigurationAddon">
      </itemfactory>
      <itemfactory
            class="org.caleydo.view.relationshipexplorer.ui.column.item.factory.impl.HTSActivityConfigurationAddon">
      </itemfactory>
      <itemfactory
            class="org.caleydo.view.relationshipexplorer.ui.column.item.factory.impl.SimpleTabularDataConfigurationAddon">
      </itemfactory>
      <itemfactory
            class="org.caleydo.view.relationshipexplorer.ui.column.item.factory.impl.TextConfigurationAddon">
      </itemfactory>
   </extension>
</plugin>
